{
  "name": "server",
  "version": "1.0.0",
  "description": "A restful API for Banka app",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc mocha --exit --require @babel/register --require babel-polyfill ./server/tests/**/*.js || true",
    "start": "npm run build && node build/index.js",
    "startDev": "export DEBUG=dev && nodemon --exec babel-node server/index.js",
    "build": "npm run clean && babel server --out-dir build",
    "clean": "rm -rf build",
    "migrations": "babel-node server/database/droptables && babel-node server/database/createtables",
    "seed": "babel-node server/database/seed",
    "dbtest": "npm run migrations && npm run seed"
  },
  "author": "Halimah Oladosu",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "debug": "^4.1.1",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.1.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "pg": "^7.10.0",
    "validatorjs": "^3.15.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.1.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^14.0.0"
  }
}
